# Use the official .NET SDK image
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80

# Use the official .NET SDK image to build the service
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["SOAPService/SOAPService.csproj", "SOAPService/"]
RUN dotnet restore "SOAPService/SOAPService.csproj"
COPY . .
WORKDIR "/src/SOAPService"
RUN dotnet build "SOAPService.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "SOAPService.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "SOAPService.dll"]

